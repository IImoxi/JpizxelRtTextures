{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ii:fire_cosmetic",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/bloom"
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": false,
				"velocity": true
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 80,
				"max_particles": 128
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.05
			},
			"minecraft:emitter_shape_disc": {
				"radius": 0.4,
				"direction": ["math.random(-1, 1)", 0, "math.random(-1, 1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "Math.random(0.5, 0.6)"
			},
			"minecraft:particle_initial_speed": "((math.random_integer(0, 1) - 0.5) * 1)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 4, 0],
				"linear_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.35 + (variable.particle_age * -0.3)", "0.35 + (variable.particle_age * -0.1)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 4,
					"texture_height": 4,
					"uv": [0, 0],
					"uv_size": [4, 4]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFBE3A",
						"0.3": "#73FF6000",
						"1.0": "#96FF0000"
					}
				}
			}
		}
	}
}