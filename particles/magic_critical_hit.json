{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "minecraft:magic_critical_hit_emitter",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/spark"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 16
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_sphere": {
				"offset": [0, -0.6, 0],
				"radius": 0.1,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.1, 1.5)"
			},
			"minecraft:particle_initial_spin": {
				"rotation_rate": "math.random(-200, 200)"
			},
			"minecraft:particle_initial_speed": "math.random(1, 6)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, -1, 0],
				"linear_drag_coefficient": 2.5
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["math.clamp((v.particle_lifetime - v.particle_age) / 2, 0, 0.08) * 4", "math.clamp((v.particle_lifetime - v.particle_age) / 2, 0, 0.08) * 4"],
				"facing_camera_mode": "rotate_xyz"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFEDFFF9",
						"0.38": "#FF00FFA5",
						"0.55": "#0000FFD8",
						"0.69": "#FF00FFD8",
						"0.82": "#0000D2FF",
						"0.92": "#FF00D2FF",
						"1.0": "#0000D2FF"
					}
				}
			}
		}
	}
}