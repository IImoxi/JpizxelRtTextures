{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ii:firework_sparkle_trail",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": false
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 32,
				"max_particles": 256
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.2
			},
			"minecraft:emitter_shape_sphere": {
				"radius": 0.2,
				"direction": ["math.random(-0.05, 0.05)", "math.random(0.1, 1)", "math.random(-0.05, 0.05)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(1, 3)"
			},
			"minecraft:particle_initial_speed": 6,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, -3, 0]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["math.clamp((v.particle_lifetime - v.particle_age) / 2, 0, 0.12)", "math.clamp((v.particle_lifetime - v.particle_age) / 2, 0, 0.12)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 16,
					"uv": [0, 12],
					"uv_size": [1, 1]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.75": "#FFFFFFFF",
						"0.84": "#00FFFFFF",
						"0.93": "#FFFFFFFF",
						"1.0": "#00000000"
					}
				}
			}
		}
	}
}