{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ii:torch_fire",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/bloom"
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": false,
				"velocity": true
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 20,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, 0, 0],
				"radius": 0.05,
				"direction": "inwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "Math.random(0.2,0.3)"
			},
			"minecraft:particle_initial_speed": "Math.random(0.1, 0.2)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 5, 0],
				"linear_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.15 + (variable.particle_age * 0.05)", "0.15 + (variable.particle_age * 0.3)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 4,
					"texture_height": 4,
					"uv": [0, 0],
					"uv_size": [4, 4]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00FFFFFF",
						"0.09": "#FFFFBE3A",
						"0.3": "#73FF6000",
						"1.0": "#96FF0000"
					}
				}
			}
