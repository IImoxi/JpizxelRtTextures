{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ii:arrow_trail",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/spark"
			}
		},
		"events": {
			"grounded_var": {
				"expression": "v.landing_timer = 0;"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 128,
				"max_particles": 2048
			},
			"minecraft:emitter_lifetime_expression": {
				"activation_expression": 1,
				"expiration_expression": "v.landing_timer > 40 ? 1 : 0"
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": "grounded_var"
			},
			"minecraft:emitter_initialization": {
				"per_update_expression": "v.landing_timer = v.landing_timer + (q.ground_speed ? 0 : 1);"
			},
			"minecraft:emitter_shape_sphere": {
				"radius": 0.1,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.1, 1.5)"
			},
			"minecraft:particle_initial_speed": 1,
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["math.clamp((v.particle_lifetime - v.particle_age) / 2, 0, 0.08) * 4", "math.clamp((v.particle_lifetime - v.particle_age) / 2, 0, 0.08) * 4"],
				"facing_camera_mode": "rotate_xyz"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00FFFFFF",
						"0.05": "#00FFFFFF",
						"0.15": "#FFFFFFFF",
						"0.75": "#FFFFB806",
						"0.84": "#00FFF1D9",
						"0.93": "#FFFF9108",
						"1.0": "#00FF6F18"
					}
				}
			}
		}
	}
}