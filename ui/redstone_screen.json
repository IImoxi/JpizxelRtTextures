{
  "namespace": "redstone",
  //---------------------------------------------------------------------------
  // Screens
  //---------------------------------------------------------------------------
  
  "hopper_gui": {
		"type": "image",
		"texture": "textures/gui/container/hopper",
		"texture_width": 256,
		"texture_height": 256,
		"uv": [ 0, 0 ],
		"uv_size": [ 176, 134 ],
		"size": [ 176, 134 ]
	},
	
	"dispenser_gui": {
		"type": "image",
		"texture": "textures/gui/container/dispenser",
