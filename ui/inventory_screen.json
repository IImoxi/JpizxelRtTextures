// \/ Recipe Book Sidebar

	"ii_sidebar@ii.dark_dialog": {
		"alpha": 0.3,
		"anchor_from": "top_right",
		"anchor_to": "top_right",
		"size":[ 176, "100%"],
		"max_size":[ "50% - 89px", "100%"],
		"bindings": [
			{
				"binding_type": "view", "source_control_name": "enable_sidebar",
				"source_property_name": "#toggle_state", "target_property_name": "#visible"
			}
		],
		"controls": [
			//{
			//	"tab_navigation_panel@crafting.tab_navigation_panel_layout": {
			//		"layer": 5,
			//		"size": [ "100%", 23 ],
			//		"anchor_from": "top_middle",
			//		"anchor_to": "top_middle"
			//	}
			//},
			{
				"tab_content_panel@crafting.ii_tab_content": {
					"size": [ "100%", "100% - 25px" ],
					"anchor_from": "top_left",
					"anchor_to": "top_left",
					"layer": 8,
					"$scrolling_pane_control": "crafting.recipe_book_scroll_panel"
				}
			},
			{
				"text_panel": {
					"type": "stack_panel",
					"orientation": "horizontal",
					"size": [ "100% - 35px", 16 ],
					"anchor_from": "bottom_right",
					"anchor_to": "bottom_right",
					"offset": [ -5, -5 ],
					"controls": [
						{
							"text_edit_control@common.text_edit_box": {
								"size": [ "fill", 16 ],

								"property_bag": {
								"#property_field": "#item_name"
								},

								"max_length": 30,
								"$text_background_default": "ii.dark_dialog",
								"$text_background_hover": "ii.dark_dialog",
								"$text_edit_binding_name": "#text_box_item_name",
								"$text_edit_box_label_size": [ "default", 10 ],
								"$text_edit_box_label_offset": [ 0, 0 ],
								"$text_edit_box_hovered_button_id": "button.search_bar_hovered",
								"$text_edit_box_clear_to_button_id": "button.search_bar_clear",
								"$text_edit_box_selected_to_button_id": "button.search_bar_selected",
								"$text_edit_box_deselected_to_button_id": "button.search_bar_deselected",

								"$text_clear_button_enabled" : false, // true crashes game lol : ctrl + del instead cuz PC
								"$magnifying_glass_enabled" : false,

								"focus_wrap_enabled": false,

								"$focus_id": "recipe_search_bar",
								"$focus_override_right": "craftable_toggle",
								"$focus_override_up": "construction_tab"
							}
						},
						{
							"filter_toggle@crafting.filter_toggle": {
								"size": [ 32, 16 ],
								"anchor_from": "bottom_right",
								"anchor_to": "bottom_right",

								"$focus_id": "craftable_toggle",
								"$focus_override_left": "recipe_search_bar",
								"$default_border_visible": false,
								"$hover_border_visible": false,
								"bindings": [
									{
										"binding_name": "#is_creative_mode"
									},
									{
										"binding_type": "view",
										"source_property_name": "(not #is_creative_mode)",
										"target_property_name": "#visible"
									}
								]
							}
						}
					]
				}
			},
			{
				"ii_search_tab_holder": {
					"type": "panel",
					"anchor_from": "bottom_left",
					"anchor_to": "bottom_left",
					"offset": [ 8, -5 ],
					"size": [ 16, 16 ],
					"controls": [
						{
							"search_tab_end_creative@crafting.search_tab": {
								"$focus_override_right": "creative_layout_toggle"
							}
                        }
					]
				}
			}
		]
	},

// Content for sidebar


	"ii_tab_content": {
    "type": "panel",
    "layer": 1,
    "controls": [
      {
        "tab_content_search_bar_panel": {
