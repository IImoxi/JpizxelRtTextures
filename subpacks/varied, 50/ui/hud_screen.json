{
  "namespace": "hud",
  
	"chat_text": {
		"type": "label",
		"layer": 10,
		"text": "#text",
		"size": [ 268, "default" ],
		"shadow": true,
		"enable_profanity_filter": false,
		"localize": true,
		"font_scale_factor": 0.5,
		"color": "$chat_text_color",
		"anims": [
		"@iihud.ii_slide_anim",
		"@iihud.ii_fade_anim"
		]
	},
	
	"hud_content": {
		"type": "panel", "size": [ "100%", "100%" ],
		"controls": [
			{ "curor_rend@iihud.cursor_renderer": {} },
			{ "camera_renderer@hud.camera_renderer": {} },
			{ "root_panel@iihud.root_panel": {} }
		]
	},
    
	"hud_screen@common.base_screen": {
		"$screen_content": "hud.hud_content",
		"enable_profanity_filter": false,
		"is_showing_menu": false,
		"should_steal_mouse": true,
		"load_screen_immediately": true,
		"low_frequency_rendering": false,
		"absorbs_input": false,
		"send_telemetry": false
	}
}
